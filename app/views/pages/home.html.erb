<div class="home-callout text-center container-fluid">
  <h1>Welcome</h1>
  <h3>A site for students...</h3>
</div>

<div class="container home-signup-links">
  <div class="row">
    <% if user_signed_in? %>
        <div class="col-md-6">
          <div class="well">
            <h2 class="text-center">Your Profile</h2>
            <% if current_user.profile %>
                <%= link_to "Edit your profile", edit_users_profile_path(user_id: current_user.id) , class: 'btn btn-default btn-lg btn-block' %>
                <%= link_to "View your profile", users_path(id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
            <% else %>
                <p>Create your profile</p>
                <%= link_to "Create your profile",  new_users_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>